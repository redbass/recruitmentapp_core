{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "company_id": {
            "type": "string"
        },
        "title": {
            "type": "string",
            "minimum": 1
        },
        "description": {
            "type": "string",
            "minimum": 1
        },
        "duration_days": {
            "type": "integer",
            "minimum": 0
        },
        "location": {
            "type": "object",
            "properties": {
                "postcode": {
                    "type": "string",
                    "minimum": 6
                },
                "latitude": {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "longitude": {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                }
            },
            "required": [
                "postcode",
                "latitude",
                "longitude"
            ],
            "additionalProperties": false
        },
        "metadata": {
            "type": "object",
            "properties": {
                "trades": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "job_type": {
                    "type": "string",
                    "minimum": 1
                }
            },
            "required": [
                "trades",
                "job_type"
            ],
            "additionalProperties": false
        },
        "rate": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "minimum": 1
                },
                "units": {
                    "type": "string"
                },
                "value": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "type",
                "value"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "company_id",
        "title",
        "description",
        "duration_days",
        "location",
        "metadata",
        "rate"
    ],
    "additionalProperties": false
}
