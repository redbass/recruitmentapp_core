{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "title": {
            "type": "string",
            "minimum": 1
        },
        "description": {
            "type": "string",
            "minimum": 1
        },
        "duration_days": {
            "type": "integer",
            "minimum": 0
        },
        "location": {
            "type": "object",
            "properties": {
                "postcode": {
                    "type": "string",
                    "minimum": 6
                },
                "latitude": {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "longitude": {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                }
            },
            "anyOf": [
                {"required": ["postcode"]},
                {"required": ["latitude"]},
                {"required": ["longitude"]}
            ],
            "additionalProperties": false
        },
        "metadata": {
            "type": "object",
            "properties": {
                "trades": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "job_type": {
                    "type": "string",
                    "minimum": 1
                }
            },
            "anyOf": [
                {"required": ["trades"]},
                {"required": ["job_type"]}
            ],
            "additionalProperties": false
        },
        "rate": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["hourly_rate", "day_rate", "price", "salary"]
                },
                "value": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "anyOf": [
                {"required": ["type"]},
                {"required": ["value"]}
            ],
            "additionalProperties": false
        }
    },
    "anyOf": [
        {"required": ["title"]},
        {"required": ["description"]},
        {"required": ["duration_days"]},
        {"required": ["location"]},
        {"required": ["metadata"]},
        {"required": ["rate"]}
    ],
    "additionalProperties": false
}
