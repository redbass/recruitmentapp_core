{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "_id": {
            "type": "string",
            "length": 16
        },
        "company_id": {
            "type": "string",
            "length": 16
        },
        "title": {
            "type": "string",
            "minimum": 1
        },
        "description": {
            "type": "string",
            "minimum": 1
        },
        "duration_days": {
            "type": "integer",
            "minimum": 0
        },
        "location": {
            "type": "object",
            "properties": {
                "postcode": {
                    "type": "string",
                    "minimum": 6
                },
                "geo_location": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "Point"
                        },
                        "coordinates": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    },
                    "required": [
                        "type",
                        "coordinates"
                    ]
                },
                "admin_district": {
                    "type": "string",
                    "minimum": 1
                }
            },
            "required": [
                "postcode",
                "geo_location"
            ],
            "additionalProperties": false
        },
        "metadata": {
            "type": "object",
            "properties": {
                "trades": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "job_type": {
                    "type": "string",
                    "minimum": 1
                }
            },
            "required": [
                "trades",
                "job_type"
            ],
            "additionalProperties": false
        },
        "rate": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "minimum": 1
                },
                "units": {
                    "type": "string"
                },
                "value": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "type",
                "value"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "company_id",
        "title",
        "description",
        "duration_days",
        "location",
        "metadata",
        "rate"
    ],
    "additionalProperties": false
}
